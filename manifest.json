{
  "manifest_version": 3,
  "name": "Zhihu Pure Reader",
  "version": "1.0",
  "description": "Make Zhihu readable again. Hides clutter and improves typography.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-128.png"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.zhihu.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}
